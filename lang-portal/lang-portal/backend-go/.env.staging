# Staging Environment Configuration

# Server Configuration
SERVER_PORT=8080
GIN_MODE=release

# Database Configuration
DB_HOST=staging-db-host
DB_PORT=3306
DB_USER=app_user
DB_PASSWORD=staging_password
DB_NAME=lang_portal_staging

# Logging Configuration - Staging Settings

# Moderate logging for staging
LOG_LEVEL=info

# Log to both file and console for monitoring
LOG_FILE=/var/log/lang-portal/app.staging.log
LOG_CONSOLE=true

# Moderate rotation settings for staging
LOG_MAX_SIZE=20       # Rotate at 20MB
LOG_MAX_BACKUPS=50    # Keep 50 backups
LOG_MAX_AGE=30        # Keep for 30 days
LOG_COMPRESS=true     # Compress old logs

# Staging-specific Features
ENABLE_DEBUG_ENDPOINTS=true    # Enable debugging for testing
ENABLE_DETAILED_ERRORS=true    # Show detailed errors for debugging
CORS_ALLOW_ALL=false          # Use staging-specific CORS settings

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=200       # Higher limit than production
RATE_LIMIT_DURATION=60        # 200 requests per minute

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/lang-portal-staging.crt
SSL_KEY_PATH=/etc/ssl/private/lang-portal-staging.key
