# Production Environment Configuration

# Server Configuration
SERVER_PORT=80
GIN_MODE=release

# Database Configuration
DB_HOST=production-db-host
DB_PORT=3306
DB_USER=app_user
DB_PASSWORD=secure_password
DB_NAME=lang_portal_prod

# Logging Configuration - Production Settings

# Less verbose logging for production
LOG_LEVEL=info

# Log to file only in production
LOG_FILE=/var/log/lang-portal/app.log
LOG_CONSOLE=false

# Larger rotation settings for production
LOG_MAX_SIZE=50       # Rotate at 50MB
LOG_MAX_BACKUPS=100   # Keep 100 backups
LOG_MAX_AGE=90        # Keep for 90 days
LOG_COMPRESS=true     # Compress old logs

# Production-specific Features
ENABLE_DEBUG_ENDPOINTS=false   # Disable debugging endpoints
ENABLE_DETAILED_ERRORS=false   # Hide detailed error messages
CORS_ALLOW_ALL=false          # Restrict CORS in production

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60        # 100 requests per minute

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/lang-portal.crt
SSL_KEY_PATH=/etc/ssl/private/lang-portal.key
