# Server Configuration
SERVER_PORT=8080
GIN_MODE=debug  # debug or release

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=lang_portal

# Logging Configuration

# Log Level (debug, info, warn, error, fatal)
# Controls the minimum severity of messages that will be logged
LOG_LEVEL=info

# Log File Path
# Absolute or relative path where log files will be stored
LOG_FILE=logs/app.log

# Console Logging
# Enable or disable logging to console/stdout (true/false)
LOG_CONSOLE=true

# Log Rotation Settings

# Maximum size of log files before rotation (in megabytes)
# When a log file reaches this size, it will be rotated
LOG_MAX_SIZE=10

# Maximum number of old log files to retain
# After this number is reached, the oldest files will be deleted
LOG_MAX_BACKUPS=30

# Maximum age of log files to retain (in days)
# Files older than this will be deleted, regardless of MaxBackups
LOG_MAX_AGE=90

# Compress rotated logs
# Whether to compress rotated log files using gzip (true/false)
LOG_COMPRESS=true
