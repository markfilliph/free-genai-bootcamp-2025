# Development Environment Configuration

# Server Configuration
SERVER_PORT=8080
GIN_MODE=debug

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=lang_portal_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration - Development Settings

# More verbose logging for development
LOG_LEVEL=debug

# Log to both file and console for easier debugging
LOG_FILE=logs/app.development.log
LOG_CONSOLE=true

# Smaller rotation settings for development
LOG_MAX_SIZE=5        # Rotate at 5MB
LOG_MAX_BACKUPS=10    # Keep only 10 backups
LOG_MAX_AGE=7         # Keep for 7 days
LOG_COMPRESS=false    # No compression for easier debugging

# Development-specific Features
ENABLE_DEBUG_ENDPOINTS=true    # Enable debugging endpoints
ENABLE_DETAILED_ERRORS=true    # Show detailed error messages
CORS_ALLOW_ALL=true           # Allow all origins in development
